<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Font name="WU_Font_Header" font="Fonts\FRIZQT__.TTF" virtual="true">
		<FontHeight>
			<AbsValue val="8"/>
		</FontHeight>
		<Color r="0.5" g="0.5" b="0.5"/>
	</Font>
	<Font name="WU_Font_EditBox" font="Fonts\FRIZQT__.TTF" virtual="true">
		<FontHeight>
			<AbsValue val="10"/>
		</FontHeight>
		<Color r="1" g="1" b="1"/>
	</Font>
	<Button name="WU_DemonManager_ActionButton_Template" inherits="SecureActionButtonTemplate, UIPanelButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
		</Scripts>
		<Size>
			<AbsDimension x="100" y="25"/>
		</Size>
		<NormalText name="$parentText" inherits="GameFontNormalSmall" justifyH="CENTER">
			<Size>
				<AbsDimension x="100" y="25"/>
			</Size>
			<Anchors>
				<Anchor point="LEFT">
					<Offset>
						<AbsDimension x="20" y="0"/>
					</Offset>
				</Anchor>
			</Anchors> 
		</NormalText>
		<Frames>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTextName" inherits="GameFontNormalSmall" justifyH="CENTER">
					<Size>
						<AbsDimension x="175" y="25"/>
					</Size>
					<Anchors>
						<Anchor point="LEFT">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Button>
	<Button name="WU_DemonManager_Button_Template" inherits="UIPanelButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonUp");
			</OnLoad>
		</Scripts>
		<Size>
			<AbsDimension x="25" y="25"/>
		</Size>
		<NormalText name="$parent_Text" inherits="GameFontNormalSmall" justifyH="LEFT">
			<Size>
				<AbsDimension x="100" y="10"/>
			</Size>
			<Anchors>
				<Anchor point="LEFT">
					<Offset>
						<AbsDimension x="20" y="0"/>
					</Offset>
				</Anchor>
			</Anchors> 
		</NormalText>
		<Frames>
		</Frames>
	</Button>
	<Frame name="WU_DemonManager" frameStrata="DIALOG" toplevel="true" parent="UIParent" movable="true" enableMouse="true" hidden="true" clampedToScreen="true">
		<Size>
			<AbsDimension x="130" y="240"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parent_Header" inherits="WU_Font_Header" text="WU_DemonManager_Header" justifyH="CENTER">
					<Anchors>
						<Anchor point="TOP" relativeTo="$parent" relativePoint="TOP">
							<Offset>
								<AbsDimension x="0" y="-7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset bottom="4" left="4" right="4" top="4"></AbsInset>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"></AbsValue>
			</TileSize>
			<EdgeSize>
				<AbsValue val="16"></AbsValue>
			</EdgeSize>
		</Backdrop>
		<Frames>
			<Frame name="WU_DemonManager_Summoning" id="100">
				<Size>
					<AbsDimension x="110" y="90"/>
				</Size>
				<Anchors>
					<Anchor point="TOP" relativeTo="WU_DemonManager" relativePoint="TOP">
						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<BackgroundInsets>
						<AbsInset bottom="4" left="4" right="4" top="4"></AbsInset>
					</BackgroundInsets>
					<TileSize>
						<AbsValue val="32"></AbsValue>
					</TileSize>
					<EdgeSize>
						<AbsValue val="16"></AbsValue>
					</EdgeSize>
				</Backdrop>
				<Frames>
					<Button name="WU_DemonManager_Summon" id="110" inherits="WU_DemonManager_ActionButton_Template" hidden="false">
						<Anchors>
							<Anchor point="CENTER" relativeTo="WU_DemonManager_Summoning" relativePoint="CENTER">
								<Offset>
									<AbsDimension x="0" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<PreClick>
								WU:DemonManager_SummonDemon(self, button);
							</PreClick>
						</Scripts>
					</Button>
					<Button name="WU_DemonManager_IncrementSummon" id="120" inherits="WU_DemonManager_Button_Template" text="+" hidden="false">
						<Anchors>
							<Anchor point="BOTTOM" relativeTo="WU_DemonManager_Summon" relativePoint="TOP">
								<Offset>
									<AbsDimension x="0" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnClick>
								WU:DemonManager_IncrementDemonLevel();
							</OnClick>
						</Scripts>
					</Button>
					<Button name="WU_DemonManager_DecrementSummon" id="130" inherits="WU_DemonManager_Button_Template" text="-" hidden="false">
						<Anchors>
							<Anchor point="TOP" relativeTo="WU_DemonManager_Summon" relativePoint="BOTTOM">
								<Offset>
									<AbsDimension x="0" y="0"/>
								</Offset>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnClick>
								WU:DemonManager_DecrementDemonLevel();
							</OnClick>
						</Scripts>
					</Button>
				</Frames>
			</Frame>
			<Button name="WU_DemonManager_Sacrifice" id="200" inherits="WU_DemonManager_ActionButton_Template" hidden="false">
				<Anchors>
					<Anchor point="TOP" relativeTo="WU_DemonManager_Summoning" relativePoint="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<PreClick>
						WU:DemonManager_SacrificeDemon(self, button);
					</PreClick>
				</Scripts>
			</Button>
			<Button name="WU_DemonManager_Dismiss" id="300" inherits="WU_DemonManager_ActionButton_Template" hidden="false">
				<Anchors>
					<Anchor point="TOP" relativeTo="WU_DemonManager_Sacrifice" relativePoint="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<PreClick>
						WU:DemonManager_DismissDemon(self, button);
					</PreClick>
				</Scripts>
			</Button>
			<Button name="WU_DemonManager_Heal" id="400" inherits="WU_DemonManager_ActionButton_Template" hidden="false">
				<Anchors>
					<Anchor point="TOP" relativeTo="WU_DemonManager_Dismiss" relativePoint="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<PreClick>
						WU:DemonManager_HealDemon(self, button);
					</PreClick>
				</Scripts>
			</Button>
			<Button name="WU_DemonManager_Close" id="500" inherits="WU_DemonManager_Button_Template" hidden="false">
				<Size>
					<AbsDimension x="100" y="25"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOM" relativeTo="WU_DemonManager" relativePoint="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="10"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WU:ToggleDemonManager();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton")
			</OnLoad>
			<OnDragStart>
				if IsShiftKeyDown() then
					self:StartMoving();
				end
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing();
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>