<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Font name="WU_Font_Header" font="Fonts\FRIZQT__.TTF" virtual="true">
		<FontHeight>
			<AbsValue val="8"/>
		</FontHeight>
		<Color r="0.5" g="0.5" b="0.5"/>
	</Font>
	<Font name="WU_Font_EditBox" font="Fonts\FRIZQT__.TTF" virtual="true">
		<FontHeight>
			<AbsValue val="10"/>
		</FontHeight>
		<Color r="1" g="1" b="1"/>
	</Font>
	<Button name="WU_AppTray_Button" inherits="SecureActionButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			</OnLoad>
		</Scripts>
		<Size>
			<AbsDimension x="50" y="50"/>
		</Size>
		<NormalText name="$parentText" inherits="GameFontNormalSmall" justifyH="CENTER">
			<Size>
				<AbsDimension x="50" y="25"/>
			</Size>
			<Anchors>
				<Anchor point="LEFT">
					<Offset>
						<AbsDimension x="20" y="0"/>
					</Offset>
				</Anchor>
			</Anchors> 
		</NormalText>
		<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
		<Frames>
		</Frames>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTextName" inherits="GameFontNormalSmall" justifyH="CENTER">
					<Size>
						<AbsDimension x="50" y="25"/>
					</Size>
					<Anchors>
						<Anchor point="LEFT">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Button>
	<Frame name="WU_AppTray" frameStrata="TOOLTIP" toplevel="true" parent="UIParent" movable="true" enableMouse="true" hidden="true" clampedToScreen="false">
		<Size>
			<AbsDimension x="190" y="75"/>
		</Size>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parent_Header" inherits="WU_Font_Header" justifyH="CENTER">
					<Anchors>
						<Anchor point="TOP" relativeTo="$parent" relativePoint="TOP">
							<Offset>
								<AbsDimension x="0" y="-7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<Texture name="WU_AppTray_PullTab">
					<Size>
						<AbsDimension x="175" y="5"/>
					</Size>
					<Anchors>
						<Anchor point="BOTTOM">
							<Offset>
								<AbsDimension x="0" y="5"/>
							</Offset>
						</Anchor>
					</Anchors>
					<Color r="0.466" g="0.008" b="0.749" a="0.75"/>
				</Texture>
			</Layer>
		</Layers>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset bottom="4" left="4" right="4" top="4"></AbsInset>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"></AbsValue>
			</TileSize>
			<EdgeSize>
				<AbsValue val="16"></AbsValue>
			</EdgeSize>
		</Backdrop>
		<Frames>
			<Button name="WU_AppTray_ShardManager" id="100" inherits="WU_AppTray_Button">
				<NormalTexture file="Interface\ICONS\INV_Misc_Gem_Amethyst_02"/>
				<PushedTexture file="Interface\ICONS\INV_Misc_Gem_Amethyst_02">
					<Size>
						<AbsDimension x="40" y="40"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</PushedTexture>
				<Anchors>
					<Anchor point="LEFT" relativeTo="WU_AppTray" relativePoint="LEFT">
						<Offset>
							<AbsDimension x="10" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WU:ToggleShardManager();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="WU_AppTray_StoneManager" id="100" inherits="WU_AppTray_Button">
				<NormalTexture file="Interface\ICONS\inv_stone_04"/>
				<PushedTexture file="Interface\ICONS\inv_stone_04">
					<Size>
						<AbsDimension x="40" y="40"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</PushedTexture>
				<Anchors>
					<Anchor point="CENTER" relativeTo="WU_AppTray" relativePoint="CENTER">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WU:ToggleStoneManager();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="WU_AppTray_DemonManager" id="100" inherits="WU_AppTray_Button">
				<NormalTexture file="Interface\ICONS\spell_shadow_impphaseshift"/>
				<PushedTexture file="Interface\ICONS\spell_shadow_impphaseshift">
					<Size>
						<AbsDimension x="40" y="40"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</PushedTexture>
				<Anchors>
					<Anchor point="RIGHT" relativeTo="WU_AppTray" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="-10" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						WU:ToggleDemonManager();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				getglobal("WU_AppTray_PullTab"):SetAlpha(0.75);
				self:ClearAllPoints();
				self:SetPoint("BOTTOM", UIParent, "TOP", 0, -10);
				WU:AppTray_StartTimer();
			</OnLoad>
			<OnEnter>
				if not InCombatLockdown() then
					getglobal("WU_AppTray_PullTab"):SetAlpha(0.0);
					self:ClearAllPoints();
					self:SetPoint("TOP", UIParent, "TOP", 0, 0);
				end
			</OnEnter>
			<OnLeave>
				if not InCombatLockdown() then
					if not (MouseIsOver(self)) then
						getglobal("WU_AppTray_PullTab"):SetAlpha(0.75);
						self:ClearAllPoints();
						self:SetPoint("BOTTOM", UIParent, "TOP", 0, -10);
					end
				end
			</OnLeave>
		</Scripts>
	</Frame>
</Ui>